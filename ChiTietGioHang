
package BookStore;

public class CT_GioHang {

    private Sach sach;
    private Double thanhTien;
    private String maKhachHang;
    
    public CT_GioHang() {
    }
    
    public CT_GioHang(Sach sach, Double thanhTien, String maKhachHang) {
        this.sach = sach;
        this.maKhachHang = maKhachHang;
        this.thanhTien = thanhTien;
    }
    
    public Sach getSach() {
        return sach;
    }

    public void setSach(Sach sach) {
        this.sach = sach;
    }


    public String getMaKhachHang() {
        return maKhachHang;
    }

    public void setMaKhachHang(String maKhachHang) {
        this.maKhachHang = maKhachHang;
    }
    
    public Double getThanhTien() {
        return thanhTien;
    }
    
    public void setThanhTien(Double thanhTien) {
        this.thanhTien = this.getSach().getSoLuongMua()* this.getSach().getDonGia();
    }
    
//    public void ktraSoLuongTonKho() {
//        
//   }

    
    @Override
    public String toString() {
       StringBuilder sb = new StringBuilder();
       sb.append("\n");
       sb.append("Ten sach: ").append(this.getSach().getTenSach()).append("\n");
       sb.append("Ma sach: ").append(this.getSach().getMaSach()).append("\n");
       sb.append("Loai sach: ").append(this.getSach().getLoaiSach()).append("\n");
       sb.append("So luong: ").append(this.getSach().getSoLuongMua()).append("\n");
       sb.append("Thanh tien: ").append(this.getSach().getDonGia()).append("\n");
       return sb.toString();
    }
    
   

    
}
